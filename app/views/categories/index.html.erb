<h1>All Categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Option</th>
  </tr>

  <% @categories.each do |category| %>
    <tr>
      <td> <%= category.name %> </td>
      <td> <%= link_to "Delete", category_path(category),
               method: :delete,
               data: {confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add Category', new_category_path %>
