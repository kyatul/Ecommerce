Reviews<br>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<table>
  <tr>
    <th>Comment</th>
    <th>Rating</th>
  </tr>

  <% @reviews.each do |review| %>
    <tr>
      <td> <%= review.comment %> </td>
      <td> <%= review.rating %></td>
    </tr>
  <% end %>
</table>

<br>Write a Review

<%= form_for :review, url: product_reviews_path do |f| %>
  <%= f.hidden_field :product_id, :value => @product_id %>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :comment%>
  </p>

  <p>
    <%= f.label :rating %><br>
    <%= f.select :rating, options_for_select(1..5)%>
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>
