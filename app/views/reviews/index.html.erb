<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      Reviews
      <table class="table">
        <tr>
          <th>Comment</th>
          <th>Rating</th>
        </tr>
        <% @reviews.each do |review| %>
          <tr>
            <td> <%= review.comment %> </td>
            <td> <%= review.rating %></td>
          </tr>
        <% end %>
    </div>
    <div class="col-lg-6">
    </div>
    <div class="row">
      <div class="col-md-6 ">
    Write a Review

    <%= form_for :review, url: product_reviews_path do |f| %>
    <%= f.hidden_field :product_id, :value => @product_id %>
    <p>
      <%= f.label :comment %><br>
      <%= f.text_area :comment%>
    </p>

    <p>
      <%= f.label :rating %><br>
      <%= f.select :rating, options_for_select(1..5)%>
    </p>

    <p>
      <%= f.submit%>
    </p>
    <% end %>
      </div>
    </div>

  </div>
</div>
