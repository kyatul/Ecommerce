<%= form_for :product, url: products_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name%>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <%= collection_select(:product, :category_id, @categories, :id, :name, {:prompt => false}) %>

  <p>
    <%= f.submit%>
  </p>
<% end %>
<% link_to "Back", products_path %>
