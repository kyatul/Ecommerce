<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td> <%= link_to product.name, product_path(product)%></td>
      <td> <%= product.description %> </td>
      <td> <%= product.price %> </td>
    </tr>
  <% end %>
</table>
