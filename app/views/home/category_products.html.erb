<h1>All Products</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td> <%= link_to product.name, user_product_path(product) %> </td>
      <td> <%= product.description %> </td>
      <td> <%= product.price %> </td>
      <td> <%= link_to "Add to Cart" %></td>
    </tr>
  <% end %>
</table>
