<h1>All Products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td> <%= product.name %> </td>
      <td> <%= product.description %> </td>
      <td> <%= product.price %> </td>
      <td> <%= link_to "Add to Cart" %></td>
    </tr>
  <% end %>
</table>
