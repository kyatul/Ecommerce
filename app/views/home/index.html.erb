<%= form_for :search, url: search_path, method: :get, :html => { :class => "form-horizontal" } do |f| %>
  <p>
    <%= f.text_field :query %>
    <%= f.submit "Search"%>
  </p>
<% end %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">ShopKart</a>
    </div>
    <ul class="nav navbar-nav">
      <% @categories.each do |category| %>
        <li><%= link_to category.name, user_category_path(category) %></li>
      <% end %>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Cart (#{@cart_count})", carts_path %></li>
    </ul>
  </div>
</nav>
