<h1>All Products in Cart</h1>

<table>
  <tr>
    <th>Product Name</th>
    <th>Price</th>
    <th>Unit</th>
    <th>Sub Total</th>
  </tr>

  <% @carts.each do |cart| %>
    <tr>
      <td> <%= cart.product.name %> </td>
      <td> <%= cart.product.price %> </td>
      <td> <%= cart.unit%> </td>
      <td> <%= cart.unit * cart.product.price %> </td>
      <td> <%= link_to "Delete", cart_path(cart.product.id),
               method: :delete,
               data: {confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>

<br><%= link_to 'Place Order'%>
