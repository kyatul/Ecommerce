<h1>All Products in Cart</h1>

<table>
  <tr>
    <th>Product Name</th>
    <th>Price</th>
    <th>Unit</th>
  </tr>

  <% @carts.each do |cart| %>
    <tr>
      <td> <%= cart.product.name %> </td>
      <td> <%= cart.product.price %> </td>
      <td> <%= cart.unit%></td>
    </tr>
  <% end %>
</table>
