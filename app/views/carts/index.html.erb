<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-6">
      <h4>Cart</h4>
    </div>
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-striped table-hover">
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Unit</th>
          <th>Sub Total</th>
          <th></th>
        </tr>

        <% @carts.each do |cart| %>
          <tr>
            <td> <%= cart.product.name %> </td>
            <td> <%= cart.product.price %> </td>
            <td> <%= cart.unit%> </td>
            <td> <%= cart.unit * cart.product.price %> </td>
            <td> <%= link_to "Delete", cart_path(cart.product.id),
                     method: :delete,
                     data: {confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-4 col-md-offset-2">
      <%= link_to 'Place Order', home_path , class: "btn btn-primary" %>
    </div>
  </div>
</div>
